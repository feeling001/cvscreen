# CVScreen v0.1 - Environment Variables
# Copy this file to .env and customize the values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=cvscreen
DB_USER=cvscreen
DB_PASSWORD=ChangeThisPassword123!

# JWT Configuration
JWT_SECRET=ChangeThisToAVeryLongRandomSecretKeyForJWTTokenGeneration
JWT_EXPIRATION=86400000

# Application Settings
SPRING_PROFILES_ACTIVE=production

# Optional: External Database (if not using docker-compose database)
# DB_HOST=external-db-server.example.com
# DB_PORT=5432
# DB_NAME=cvscreen_prod
# DB_USER=cvscreen_user
# DB_PASSWORD=SecurePasswordHere

# Optional: Resource Limits
# JAVA_OPTS=-Xmx1024m -Xms512m

# Optional: Logging Level
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_CVSCREEN=DEBUG
